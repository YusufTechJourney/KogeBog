<!-- two_pane.xml -->
<androidx.slidingpanelayout.widget.SlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_pane_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.kogebog.homeOption.DrinksFragment"

    <!-- The first child view becomes the left pane. When the combined
         desired width (expressed using android:layout_width) would
         not fit on-screen at once, the right pane is permitted to
         overlap the left. -->
    <androidx.recyclerview.widget.RecyclerView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/card_layout"
        ></androidx.recyclerview.widget.RecyclerView>

    <!-- The second child becomes the right (content) pane. In this
         example, android:layout_weight is used to expand this detail pane
         to consume leftover available space when the
         the entire window is wide enough to fit both the left and right pane.-->

    <LinearLayout
        android:id="@+id/detail_container"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:name="com.example.SelectAnItemFragment"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/titel_opskrift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="35dp"
                    android:layout_alignParentTop="true"

                    />
                <ImageView
                    android:id="@+id/mainCorse1Image"
                    android:layout_width="200dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/titel_opskrift"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/ingredients_opskrift"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mainCorse1Image"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="7dp" />

                <TextView
                    android:id="@+id/manual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/ingredients_opskrift"/>

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/cardview_light_background"
                    android:src="@drawable/favorite_size40dp">


                </ImageButton>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>


</androidx.slidingpanelayout.widget.SlidingPaneLayout>
